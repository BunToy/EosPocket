<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/stake_view_holder_left_padding"
    android:paddingRight="@dimen/stake_view_holder_right_padding"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="CPU"
        tools:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="1.12ms / 0.54ms (0.1000 EOS)"
        tools:textColor="#000000"/>

    <View
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="8"
        android:background="@color/success_color"
        android:layout_marginTop="5dp"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc" />

    <Button
        android:id="@+id/btn_stake"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/progress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progress"
        app:layout_constraintBottom_toBottomOf="@+id/progress"
        tools:text="Stake"/>

