<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    android:focusableInTouchMode="true"
    android:padding="20dp">

    <app.eospocket.android.ui.view.FormatInputEditText
        android:id="@+id/edit_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="To Address.."
        app:format="_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_cpu_stake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU Stake"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_to"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/cpu_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_cpu_stake"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:bsb_bubble_text_color="@color/colorPrimaryDark"
        app:bsb_progress="0"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_thumb_text="true" />


    <TextView
        android:id="@+id/txt_network_stake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Stake"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cpu_seek_bar"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/network_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_network_stake"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:bsb_bubble_text_color="@color/colorPrimaryDark"
        app:bsb_progress="0"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_thumb_text="true" />

    <CheckBox
        android:id="@+id/checkbox_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layoutDirection="rtl"
        android:text="Transfer"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network_seek_bar" />


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_transfer" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Cancel"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_confirm"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>